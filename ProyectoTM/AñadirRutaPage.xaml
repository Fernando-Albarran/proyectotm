<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoTM.AñadirRutaPage"
             Title="AltaRutaPage">
    <VerticalStackLayout Padding="20" Spacing ="10">

        <Entry x:Name="identificadorR" Placeholder="Identificador"/>
        <Entry x:Name="nombreR" Placeholder="Nombre"/>

        <Picker x:Name="dificultadR" Title="Dificultad">
            <Picker.Items>
                <x:String>Fácil</x:String>
                <x:String>Media</x:String>
                <x:String>Dificil</x:String>
            </Picker.Items>
        </Picker>

        <Entry x:Name ="provinciaR" Placeholder="Provincia"/>
        <Switch x:Name ="circularR"/>

        <DatePicker x:Name ="fechaPicker"/>
        
        <Button Text = "GUardar Ruta" Clicked = "GuardarRuta"/>
    </VerticalStackLayout>
</ContentPage>